@import './post-list-variables'

.forum-post

	&-meta
		margin-bottom: 1em

	&-users
		text-overflow()

	&-author
		font-weight: bold
		margin-right: 2px

	&-controls a
		margin-right: 2px

	&-replied-to-btn
		display: block
		margin-bottom: $line-height-computed
		padding: 5px 10px
		background-color: $gray-lightest
		color: $gray
		font-size: $font-size-small

	&-body

		h1, h2, h3, h4, h5, h6
			@extend .h5
			font-weight: bold

			&:first-child
				margin-top: 0

		img
			@extend .img-responsive

			// Center it if is too small.
			margin-left: auto
			margin-right: auto

		h1, h2, h3, h4, h5, h6
			&:first-child
				margin-top: 0

		// Widgets some times create empty P tags.
		// This hides them so they don't add extra spacing to the page.
		p:empty
			display: none

		// Removes the added spacing after iframes since they aren't block elements.
		// They basically by default add their line spacing to the bottom.
		iframe
			display: block
			margin-bottom: $font-size-base

		table
			@extend .table

		pre
			padding-left: ($forum-post-list-icon-size / 2) + $forum-post-list-avatar-margin
			margin-left: -@padding-left

			.form-markdown-editor-preview&
				// Reset the padding to what it is in scaffolding.styl
				padding-left: (($line-height-computed - 1) / 2);
				margin-left: 0

		&-quoted
			border-left: 3px solid $gray-lightest
			padding-left: ($grid-gutter-width / 2)
