.status-bar
	@extend .fill-darker, .clearfix
	padding: 0 10px
	height: $status-bar-height
	line-height: @height
	font-size: $font-size-tiny

	.jolticon
		vertical-align: middle

	&-progress
		display: inline-block
		width: 200px

		.progress
			display: inline-block
			margin: 0

		.progress + .progress
			margin-left: 1px

	&-item
		text-overflow()
		float: left
		margin-right: 30px
		max-width: 300px

		.pull-right &
			margin-right: 0
			margin-left: 30px
