.timeline-list

	$icon-size = 40px
	$avatar-size = 30px
	$avatar-margin = 10px

	margin-bottom: $line-height-computed

	// We pull the list to the left on mobile so that we have more room.
	// This cuts off the icon bubbles a bit.
	margin-left: -20px
	@media $media-sm-up
		margin-left: 0

	// For making the timeline list full bleed.
	&.full-bleed
		@media $media-sm-up
			margin-left: -($icon-size + $avatar-margin)

	// For doing a full-bleed within the content.
	&-full-bleed
		margin-left: -(($icon-size / 2) + $avatar-margin)

	&-item
		position: relative
		display: block
		color: $gray-dark

		&-icon
			position: absolute
			left: 0
			top: 0
			width: $icon-size
			height: $icon-size
			line-height: $icon-size
			background-color: $gray-lightest
			border-radius: 50%
			text-align: center
			z-index: 1
			color: $gray-light

			.timeline-list-item:hover &
				background-color: $gj-dark-green
				color: $gj-green

			&.active
				background-color: $gj-pink
				color: $white

			> .jolticon
				position: relative
				top: -1px
				margin: 0
				vertical-align: middle

		&-main
			@extend .clearfix
			margin-left: ($icon-size / 2)
			padding-left: ($icon-size / 2) + $avatar-margin
			padding-bottom: ($line-height-computed * 1.5)
			border-left: 2px solid $gray-lightest

		&-time
			color: $text-muted
			font-size: $font-size-tiny

		&-title
			font-weight: bold
			color: $gray

			strong
			b
				color: $black

		&-header
			display: block
			position: relative
			background-color: $gray-darker
			margin-left: -(($icon-size / 2) + $avatar-margin)
			margin-bottom: $line-height-computed

			&-img
				display: block
				opacity: 0.7

				img
					display: block
					width: 100%
					height: auto

			&-content
				padding-top: ($grid-gutter-width / 2)
				padding-bottom: @padding-top
				padding-left: ($icon-size / 2) + $avatar-margin
				padding-right: @padding-top

				.timeline-list-item-header.has-header-img &
					position: absolute
					top: 0
					left: 0
					text-shadow: 1px 1px 1px rgba( $black, 0.5 )

				& .timeline-list-item-time
					color: $white

				& .timeline-list-item-title
					font-size: $font-size-h2

					&
					strong
					b
						color: $white

		&-details
			margin-top: 5px

		&-content
			font-size: $font-size-small
			color: $gray-dark

			p:last-child
				margin-bottom: 0

		&-thumb
		&-avatar
			float: left
			width: $avatar-size
			height: $avatar-size
			margin-right: $avatar-margin

		&-thumb
			background-color: $gray-lightest
			background-repeat: no-repeat
			background-position: center center
			background-size: cover

		&-mark
			float: right
			margin-left: $avatar-margin
