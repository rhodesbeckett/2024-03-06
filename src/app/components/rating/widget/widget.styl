@require '~styles/variables'
@require '~styles-lib/mixins'

.rating-widget
	clearfix()
	display: inline-block

.-icons
	display: flex
	align-items: center
	justify-content: center

.-bubble
	display: flex
	margin-right: 3px
	width: 30px
	height: 30px
	align-items: center
	justify-content: center
	border-radius: 50%
	cursor: pointer
	user-select: none

	.jolticon
		margin: 0 !important
		cursor: pointer

	&.-hover, &.-selected
		theme-prop('background-color', 'highlight')
		theme-prop('color', 'highlight-fg')

.-clear
	theme-prop('color', 'fg-muted')
	width: 40px
	text-align: center
	cursor: pointer

	.jolticon
		display: none
		cursor: pointer

		@media $media-mobile
			display: block

		&:hover
			theme-prop('color', 'notice')

		.rating-widget:hover &
			display: block
