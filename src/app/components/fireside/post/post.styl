@require '../../../../lib/gj-lib-client/stylus/mixins/compiled-content'

$-font-size-xs = 16px
$-line-height-xs = $-font-size-xs * 1.5
$-font-size = 18px
$-line-height = $-font-size * 1.4

.fireside-post-body
	compiled-content($-font-size-xs, $-line-height-xs)

	@media $media-sm-up
		compiled-content($-font-size, $-line-height)

	a
		link-underlines(var(--theme-link), var(--theme-bg), var(--theme-link-hover))

	// We have to cancel the link-underlines styling.
	.hashtag
		text-shadow: none
		background-image: none !important

	.spoiler
		font-style: normal

	img, iframe
		rounded-corners()

.fireside-post-lead
	font-size: 16px
	line-height: 1.4
	font-weight: 600 // Semibold

	@media $media-sm-up
		font-size: 19px

	>>> a
		theme-prop('color', 'link')

		&:hover, &:focus
			theme-prop('color', 'link')
			text-decoration: underline
