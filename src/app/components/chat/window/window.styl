@require '~styles/variables'
@require '../../../../lib/gj-lib-client/stylus/common/mixins'

.chat-window-wrap
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	display: flex
	justify-content: center
	align-items: flex-start
	z-index: $zindex-chat-window
	padding-right: 70px

	@media $media-sm-up
		top: $shell-top-nav-height + 10px
		left: 0
		right: $shell-pane-width + 10px

		body.chat-tabs-visible.status-bar-visible &
			bottom: $status-bar-height + 10px

.chat-window-back-close
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	background: transparent
	z-index: 0

.chat-window
	position: relative
	display: flex
	flex: 1 1 auto
	justify-content: center
	max-width: $chat-room-window-width
	height: 100%
	z-index: 1

	@media $media-xs
		position: fixed
		top: 0
		right: 0
		left: 0
		bottom: 0
		height: auto !important
		width: auto !important

.chat-window-users
	position: relative
	background-color: $gray-darkest
	z-index: 1

	// Always show the scrollbar.
	// This fixes a bug where it was flashing the scrollbar in and out on Chrome.
	// https://github.com/gamejolt/issue-tracker/issues/454
	overflow-y: scroll !important

	@media $media-xs
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		z-index: 3

	@media $media-sm-up
		flex: 0 0 25%

.chat-window-main
	position: relative
	flex: 1 1 auto
	display: flex
	flex-direction: column
	max-width: 1000px * 0.75  // Up to 75%
	z-index: 1

/**
 * Chat Window Header
 */
.chat-window-header-wrap
	flex: 0 0 auto
	width: 100%
	color: $gray-light
	font-size: 14px

.chat-window-header
	clearfix()
	background-color: gray-darkest
	padding: $chat-room-window-padding

	h2
	h3
		text-overflow()
		margin: 0
		line-height: 1

	&-avatar
		float: left
		margin-right: 15px
		width: 45px
		height: 45px

		img
			display: block
			width: 45px
			height: 45px

.chat-window-header-controls
	float: right
	margin-left: 10px

	> .btn
		position: relative
		vertical-align: op
		top: -($chat-room-window-padding)
		right: -($chat-room-window-padding)
		margin-left: 5px

		&:last-child
			margin-right: 10px

.chat-window-header-room-description
	font-size: $font-size-small
	color: $text-muted
	width: 100%
	margin: 5px 0

/**
 * Chat Window Output
 */
.chat-window-output
	flex: 1 1 auto
	overflow-y: auto
	overflow-x: hidden
	padding: $chat-room-window-padding
	font-size: $font-size-small
	background-color: $white

.chat-window-send-container
	width: 100%
	flex: 0 0 auto
	background-color: $gray-lightest
	padding: $chat-room-window-padding
