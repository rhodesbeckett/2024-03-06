.devlog-post-media

	&-prev
	&-next
		display: none
		position: absolute
		top: 50%
		height: 50px
		width: @height
		line-height: 50px
		margin-top: -25px
		color: $white
		text-align: center
		background-color: $gray-darker
		z-index: 2
		user-select: none

		&:hover
			color: $gj-green

	&-prev
		left: 0

	&-next
		right: 0

	&-game
		float: right
		width: 120px
		border: 2px solid $white

	.timeline-list-item-header-content
		pointer-events: none

	.timeline-list-item-header-content
	.timeline-list-item-header-img
		transition: opacity 400ms

	.timeline-list-item-header-img
		white-space: nowrap

		.devlog-post-media-slider
			transition: transform 300ms $strong-ease-out

			&-item
				display: inline-block
				vertical-align: top
				width: 100%

	.timeline-list-item-header:hover
	&.has-dragged .timeline-list-item-header
		.timeline-list-item-header-content
			opacity: 0

		.timeline-list-item-header-img
			opacity: 1

		@media $media-sm-up
			.devlog-post-media-prev
			.devlog-post-media-next
				display: block
