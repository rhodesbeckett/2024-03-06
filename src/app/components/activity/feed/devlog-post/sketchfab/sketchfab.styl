@require '~styles/variables'

.devlog-post-sketchfab
	&-embed
		position: relative
		background-color: $gray-lightest
		border-radius: $border-radius-base

		a
			display: block

		&-thumb
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			background-repeat: no-repeat
			background-position: center center
			background-size: cover
