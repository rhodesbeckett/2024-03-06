@require '~styles/variables'

.-video-embed
	position: relative
	background-color: $gray-lightest
	border-radius: $border-radius-base

	a
		display: block

.-thumb
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	background-repeat: no-repeat
	background-position: center center
	background-size: cover

// It's a thumbnail first, then after clicking it becomes an iframe embed.
.-thumb, >>> iframe
	border-radius: $border-radius-base
