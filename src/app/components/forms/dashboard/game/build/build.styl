gj-form-dashboard-game-build

	ng-form
		display: block
		position: relative
		font-size: $font-size-small
		margin-top: 0 !important

	.form-group
		@extend .no-animate

	legend
		font-size: $font-size-h4

	.game-build-form-spinner
		@extend .no-animate-leave
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0
		content: ''
		background-color: rgba( $white, 0.5 )
		z-index: 2
		display: flex
		align-items: center
		justify-content: center

		animation-name: fade-in
		animation-duration: 500ms
		animation-delay: 200ms
		opacity: 0

	.build-options
		float: right
		margin-left: 20px

	.stat-big.stat-big-smaller
		margin-bottom: 0

	.form-group
	.help-block
	.alert
		margin-bottom: ($line-height-computed / 2)

	.game-build-form-submit-button
		margin-top: ($line-height-computed / 2)

	.downloadable-platforms

		&.form-group
		.form-group
			margin-left: 0
			margin-right: 0

		.form-group
			float: left
			margin-bottom: 0
			margin-right: 20px

		.checkbox
			margin-top: 0
