.search-history-icon
	display: block
	position: absolute
	left: 0
	top: 15px
	width: 20px
	height: 20px
	line-height: @height
	user-select: none
	cursor: pointer
	z-index: 2

	> .jolticon
		color: $gray-lighter
		cursor: pointer

	> .caret
		position: absolute
		top: 0
		right: -10px

	&:hover
	&.active
		> .jolticon
			color: $gray-lightest
