.topic-author
	padding-right: 3px
	
.topic-author-avatar
	position: absolute
	left: -150px
	width: 150px
	background-color: $gray-lighter
	border: 4px solid $gray-lightest
	border-radius: 5px
	overflow: hidden
	
	@media $media-sm
		border-width: 3px
		width: 80px
		left: -80px
	
.topic-meta
	margin-top: 1em
	
	@media $media-xs
		margin-bottom: 1em

.topic-main-post
	font-size: 1.1em
	padding: 1.5em 0
	border-bottom: 2px solid $gray-lightest
			
	.topic-post-content
		margin-left: 0