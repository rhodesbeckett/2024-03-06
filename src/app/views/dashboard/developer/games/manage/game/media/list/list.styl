.media-item-list

	&-item
		display: block
		margin-bottom: $grid-gutter-width
		position: relative
		height: 0
		padding-top: 80%
		background-color: $gray-darkest

		@media $media-xs
			margin-bottom: $grid-gutter-width-xs

	&-item-inner
		position: absolute
		top: 5px
		right: 5px
		bottom: 5px
		left: 5px

	&-item-controls
		position: absolute
		top: -5px
		right: 5px
		z-index: 1

