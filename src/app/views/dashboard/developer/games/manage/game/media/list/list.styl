	&-item-img
	&-item-add
		position: absolute
		top: 0
		right: 0
		bottom: 0
		left: 0

	&-item-img
		background-repeat: no-repeat
		background-position: center center
		background-size: cover

		// This is also the drag handle.
		ui-tree-handle.&
			cursor: move

	&-item-add
		top: 5px
		right: 5px
		bottom: 5px
		left: 5px
		text-align: center
		color: $gray-lighter
		padding-top: 30px
		background-color: $gray

		&:hover
			background-color: $gray-dark

