.ctrl-discover-games-view-overview-page

	.game-stats
		margin-bottom: $line-height-computed

		.stat-big
			margin-bottom: 0


	// Match the styling of .stat-big labels.
	.rating-widget-label
		margin-top: 0

		@media $media-mobile
			font-family: $font-family-base
			color: $text-muted
			font-size: $font-size-small
			margin-bottom: 5px

	.rating-breakdown
		margin-bottom: 0

		> table
			margin-bottom: 0

			> tbody > tr > th
			> tbody > tr > td
				border-top: 0

	.rating-breakdown-label
	.rating-breakdown-count
		width: 1px

	.rating-breakdown-count
		color: $text-muted
		font-size: $font-size-small
		text-align: right

	.rating-breakdown-progress
		vertical-align: middle

		.progress
			margin-bottom: 0

	.game-supporters
		@extend .clearfix
		margin-left: -5px
		margin-right: -5px

	.game-supporter
		float: left
		width: 50px
		margin: 0 5px 5px 5px

	.recommended-games
		.game-thumbnail
			margin-bottom: 0

	// Collapse spacing between headers a bit on really small screens.
	@media $media-xs

		h2
			margin-top: $line-height-computed

			&.section-header
				margin-top: 0

	@media $media-sm

		#maturity-rating
			margin-top: 60px

		.game-stats
			margin-bottom: 0

	.devlog-section
		position: relative
		overflow: hidden
		border-top: 2px solid $gray-light
		border-bottom: 2px solid $gray-light
		cursor: pointer

		max-height: 300px

		@media $media-sm-up
			max-height: 600px

		&::after
		&-overlay
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			content: ''

		// The Shadow on bottom
		&::after
			top: auto
			height: 80px
			transition: opacity 500ms, transform 1000ms
			pointer-events: none
			background-image: linear-gradient( to bottom, rgba( $gj-blue, 0 ) 0%, rgba( $gj-blue, 0.2 ) 100% )
			transform: translateY( 130px )
			z-index: 3

		&-overlay
			background-color: rgba( $black, 0.4 )
			z-index: 2
			display: flex
			justify-content: center
			align-items: center
			transition: background-color 500ms

			&:hover
				background-color: rgba( $black, 0.6 )

		&:hover
			&::after
				transform: translateY( 0 )

