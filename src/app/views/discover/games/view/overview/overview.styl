.ctrl-discover-games-view-overview-page

	hr
		margin: 10px 0

	.game-stats
		margin-bottom: $line-height-computed

		.stat-big
			margin-bottom: 0

			a
				text-decoration: none
				border-bottom: 3px solid $gray-lighter
				color: $black

				&:hover
					border-color: $black


	// Match the styling of .stat-big labels.
	.rating-widget-label
		margin-top: 0

		@media $media-mobile
			font-family: $font-family-base
			color: $text-muted
			font-size: $font-size-small
			margin-bottom: 5px

	.rating-breakdown
		margin-bottom: 0

		> table
			margin-bottom: 0

			> tbody > tr > th
			> tbody > tr > td
				border-top: 0

	.rating-breakdown-label
	.rating-breakdown-count
		width: 1px

	.rating-breakdown-count
		color: $text-muted
		font-size: $font-size-small
		text-align: right

	.rating-breakdown-progress
		vertical-align: middle

		.progress
			margin-bottom: 0

	.game-supporters
		@extend .clearfix
		margin-left: -5px
		margin-right: -5px

	.game-supporter
		float: left
		width: 50px
		margin: 0 5px 5px 5px

	.recommended-games
		.game-thumbnail
			margin-bottom: 0

	// Collapse spacing between headers a bit on really small screens.
	@media $media-xs

		h2
			margin-top: $line-height-computed

			&.section-header
				margin-top: 0

	@media $media-sm

		#maturity-rating
			margin-top: 60px

		.game-stats
			margin-bottom: 0
