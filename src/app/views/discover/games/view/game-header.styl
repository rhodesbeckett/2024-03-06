.cake-button
	display: inline-block
	text-align: center
	font-size: $font-size-tiny
	color: $gray-lighter !important
	user-select: none
	cursor: pointer
	white-space: nowrap
	width: 75px

	@media $media-sm-up
		font-size: $font-size-small

	> .jolticon
		display: block
		color: $white
		margin-bottom: 5px

	&.active
		color: $gj-green !important
		> .jolticon
			color: $gj-green

.cake-button + .cake-button
	margin-left: ($grid-gutter-width-xs / 2)

.cake-button-group
	position: relative
	display: table
	width: 100%
	table-layout: fixed
	border-collapse: separate
	vertical-align: middle

	> .cake-button
		position: relative
		display: table-cell
		width: 100%

	> .cake-button + .cake-button
		margin-left: -1px

/**
 * Game Header Meta
 */
.game-header
	padding-top: 10px

.game-header-meta
	text-align: center

	@media $media-sm-up
		text-align: left

.game-header-byline
	@extend .text-muted
	font-family: $font-family-heading
	margin-bottom: 20px

	.user-avatar
		position: relative
		top: 11px
		display: inline-block
		margin-right: 5px
		width: 30px

	a
		color: $gray-lighter !important

		&:hover
			color: $white !important

.game-header-time-ago
	display: block
	font-size: $font-size-small
	margin-top: $font-size-base  // For XS.

	@media $media-sm-up
		display: inline

/**
 * Game Header Stats
 */
.game-header-stats
	text-align: center

	@media $media-xs
		margin-left: 0
		margin-right: 0

	@media $media-sm-up
		text-align: left

// Make it so the meter will inline with the big stat.
.game-header-stats-voltage .meter
.game-header-stats-voltage-stat
	display: inline-block

.game-header-stats-voltage .meter
	margin-left: 30px

.game-header-rate-label
	@extend .text-muted
	font-size: $font-size-small
	margin-bottom: 5px

.game-header-controls
	margin-bottom: ($line-height-computed * 1.5)

.game-header-nav
	@extend .clearfix
	position: relative
	z-index: $zindex-nav-scroll-affixed

	> .container
		position: relative

@media $media-xs

	.game-header-ogrs
		display: block
		margin-top: 10px

	.game-header-controls
		padding: 15px 0
		margin-bottom: 0
		text-align: center

	.game-header-stats
		margin-top: 15px

@media $media-sm

	.game-header-byline
		margin-bottom: 15px

	.game-header-controls
		margin-bottom: 20px

	.game-header-nav-addons
		padding-top: 10px
		padding-bottom: 10px

	.game-header-stats
		float: right

	.game-header-nav .platform-list
		margin-top: 10px

@media $media-md-up

	.game-header-byline
		margin-bottom: 15px

	.game-header-controls
		margin-bottom: 15px

