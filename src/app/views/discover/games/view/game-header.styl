	// 	height: 65px

	// 	// Force on to GPU.
	// 	// For some reason Chrome wasn't repainting when it would disappear.
	// 	// This fixes the Chrome bug. Odd.
	// 	transform: translate3d( 0, 0, 0 )

	// 	.platform-list
	// 		float: left
	// 		margin-top: 11px !important

	.game-header-nav-addons
		@extend .clearfix
		position: absolute
		bottom: 5px
		right: 0

		> div
			float: left

	/**
	 * Affixed Nav
	 */
	.game-header-nav.gj-scroll-affixed
		position: fixed
		background-color: $gray-dark
		margin-top: $shell-top-nav-height !important
		border-bottom: 2px solid $gray

		.game-header-rate-label
			font-size: $font-size-small
			margin-bottom: 8px

		.stat-list .stat-big:first-child
			padding-left: 5px

		.rating-widget
			margin-right: 15px
