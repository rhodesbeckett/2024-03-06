.ctrl-discover-home-page #content
	.page-cut
		margin-bottom: 0

	.home-game-rows

		h1, h2, h3
			.jolticon
				position: relative
				bottom: 1px

		.game-thumbnail
			margin-bottom: 0

	.fireside-logo
		position: relative
		height: 45px
		vertical-align: baseline

		@media $media-sm-up
			top: 4px
			margin-left: 10px

	.social-widgets
		text-align: center
		margin-top: 15px
		margin-bottom: 0

		@media $media-mobile
			text-align: center

	.social-widgets-label
		display: inline-block
		color: $text-muted
		font-size: $font-size-small
		margin-right: 10px

	.marketplace-section
		.jolticon-heart
			color: $gj-pink

.channel-thumbnail
	display: block
	text-align: center
	margin-bottom: $line-height-computed

.channel-thumbnail-image-spacer
	position: relative
	height: 0
	padding-top: 100%  // Makes it same height as width.
	overflow: hidden

.channel-thumbnail-image
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	display: flex
	align-items: center
	justify-content: center
	background-color: $gray-darker

	> img
		width: 116px * 0.5
		height: 116px * 0.5

.channel-thumbnail-label
	padding: 8px
	color: $white
	font-weight: bold
	font-size: $font-size-small
	background-color: $gray-dark

	a:hover &
		background-color: $gj-dark-green
		color: $gj-green
		text-decoration: none

.devlogs-banner
	border-bottom: 2px solid $gray
	background: url('/app/views/discover/home/banner-bg.png') repeat-x
	background-color: $gray-darker

	.section-header
		font-weight: 100

	&-well
		margin-bottom: 0
		position: relative

		@media $media-sm-up
			left: -60px

		&::before
			caret( color: $gray-darkest, direction: 'right', size: 15px )
			display: none
			content: ''

			@media $media-sm-up
				display: block

	&-mascot
		position: absolute
		top: 0
		bottom: 0
		right: -120px
		width: 100px
		display: flex
		align-items: center
		justify-content: center
