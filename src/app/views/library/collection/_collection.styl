.collection-header

	.collection-copy
		margin-bottom: $font-size-base

		h4
			color: $text-muted
			margin-top: 0

		p
			margin-top: $font-size-base
			margin-bottom: 0

		// Shows right before the tag. Eg: Games tagged with...
		.collection-copy-tag-lead
			margin: 0

	@media $media-xs
		text-align: center

	@media $media-lg
		.stat-list
			margin-bottom: 0
			margin-top: 20px
