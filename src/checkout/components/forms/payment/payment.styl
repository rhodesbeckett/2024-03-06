gj-form-payment

	.form-group
		@extend .no-animate
		position: relative
		margin: 0

		.jolticon
			position: absolute
			left: 8px
			top: 11px
			color: $text-muted
			z-index: 3

	.form-control
		position: relative
		height: 40px
		z-index: 1
		padding-left: 33px
		// border: 0
		// border-bottom: 2px solid $gray-lighter
		box-shadow: none

		&:focus
			z-index: 2

	.left-col
	.right-col
		.form-control
			top: -1px

	.left-col
		float: left
		width: 50%

	.right-col
		float: right
		width: 50%

		.form-control
			left: -1px

	.checkbox
		cursor: pointer
