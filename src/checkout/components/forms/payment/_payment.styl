gj-form-payment

	fieldset
		margin-top: $line-height-computed

		> legend
			@extend .h4
			margin-top: 0
			font-weight: 300

	.form-group
		@extend .no-animate
		position: relative
		margin: 0

		label[for]
			@extend .sr-only

		.jolticon
			position: absolute
			left: 8px
			top: 11px
			color: $text-muted
			z-index: 3

	// Change form styling to use outlines instead of borders.
	// This will allow the outlines to overlap each other properly.
	.form-control
		position: relative
		height: 40px
		box-shadow: none
		border: none !important
		outline: 1px solid $input-border
		z-index: 1

		&:focus
			outline: 1px solid $input-border-focus
			outline-offset: 0  // Chrome adds an offset on focus for outlines.
			z-index: 2

		&.has-icon
			padding-left: 33px

	.left-col
		float: left
		width: 50%

	.right-col
		float: right
		width: 50%

	.checkbox
		cursor: pointer
		color: $gray
		font-weight: normal
		font-size: $font-size-small

	.new-card-expander
		margin-left: -($grid-gutter-width-xs / 2)
		margin-right: -($grid-gutter-width-xs / 2)

		@media $media-sm-up
			margin-left: -($grid-gutter-width / 2)
			margin-right: -($grid-gutter-width / 2)

		&.has-cards .well
			position: relative
			margin-top: 10px

			// Up arrow.
			&::before
				caret( color: $gray-lightest, direction: 'up', size: 10px )
				content: ''
